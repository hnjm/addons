<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <data>
        <record id="account.account_invoices" model="ir.actions.report">
            <field name="binding_model_id" eval="False"/>
        </record>
        <record id="action_report_invoice_template" model="ir.actions.report">
            <field name="name">Invoices</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">report_invoice_template.report_invoice_document_new</field>
            <field name="report_file">report_invoice_template.report_invoice_document_new</field>
            <field name="print_report_name">'Invoice'</field>
             <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>
    </data>

    <template id="report_invoice_document_new">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report_template_custom.custom_layout">
                    <div class="page">
                        <style>
                            td {
                                border-left: 1px solid white !important;
                                border-right: 1px solid white !important;
                                border-top: 1px solid #FF9900 !important;
                                border-bottom: 1px solid #FF9900 !important;
                            }
                            .invoice_line{
                                border-top: 1px solid white !important;
                                border-bottom: 1px solid white !important;
                            }
                            .invoice_line_1{
                                border-bottom: 1px solid #FF9900 !important;
                            }
                            .title-address{
                                font-size: 18px;
                                font-weight: bolder;
                            }
                            .tdnarration td{
                                border: none !important
                            }
                        </style>
                        <!-- <div class="row">
                            <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)"/>
                        </div> -->
                        <div class="row">
                            <div class="col-6">
                            </div>
                            <div class="col-6">
                                <strong t-if="o.move_type == 'out_invoice'">Buyer:</strong>
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.parent_id.name" /></span>
                                </div>
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.name" /></span>
                                </div>
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.street" /></span>
                                </div>
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.street2" />, <t t-esc="o.partner_id.city" />, <t t-esc="o.partner_id.state_id.name" />, <t t-esc="o.partner_id.zip" /></span>
                                </div>
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.country_id.name" /></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class='col-12'>
                                <table class="table table-bordered invoice">
                                    <tbody>
                                        <tr>
                                            <td colspan="9">
                                                <div class="row">
                                                    <div class="col-6 text-center">
                                                        <span style="font-size: 25px; font-weight: bolder">Invoice</span>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="text-left">
                                                            <span>
                                                                <span style="margin-right: 10px;">Invoice number</span>
                                                                <span style="margin-left: 28px;">:</span>
                                                                <span class="span-header-three-1"  style="margin-left: 10px"><t t-esc="o.name" /></span>
                                                            </span>
                                                        </div>
                                                        
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="9">
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div>
                                                            <span>Your Order nr.</span>
                                                            <span style="margin-left: 13px">:</span>
                                                            <span style="margin-left: 10px"><t t-esc="o.ref" /></span>
                                                        </div>
                                                        <div >
                                                            <span>Your phone nr.</span>
                                                            <span style="margin-left: 13px">:</span>
                                                            <span style="margin-left: 10px"> <t t-esc="o.partner_id.phone" /></span>
                                                        </div>
                                                        <div>
                                                            <span>Your e-mail</span>
                                                            <span style="margin-left: 36px">:</span>
                                                            <span style="margin-left: 10px"><t t-esc="o.partner_id.email" /></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="text-left">
                                                            <span>
                                                                <span style="margin-right: 10px;">Invoice date</span>
                                                                <span style="margin-left: 49px;">:</span>
                                                                <span class="span-header-three" style="margin-left: 10px"><t t-esc="o.invoice_date" /></span>
                                                            </span>
                                                        
                                                        </div>
                                                        <div class="text-left">
                                                            <span>
                                                                <span style="margin-right: 10px;">Incoterms</span>
                                                                <span style="margin-left: 64px;">:</span>
                                                                <span class="span-header-three" style="margin-left: 10px"><t t-esc="o.invoice_incoterm_id.name" /></span>
                                                            </span>
                                                        
                                                        </div>
                                                        <div class="text-left">
                                                            <span>
                                                                <span style="margin-right: 10px;">Terms of payment</span>
                                                                <span style="margin-left: 10px;">:</span>
                                                                <span class="span-header-three" style="margin-left: 10px"><t t-esc="o.invoice_payment_term_id.name" /></span>
                                                            </span>
                                                        
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="3" style="width: 30%">Description</td>
                                            <td colspan="1" style="width: 10%" class="text-right">Quantity</td>
                                            <td colspan="2" style="width: 20%" class="text-right">Unit Price (<span t-esc="o.currency_id.name"></span>)</td>
                                            <td colspan="3"  class="text-right" style="width: 20%">Total</td>
                                        </tr>
                                        <t t-set="total_sale_order" t-value="0"/>
                                        <t t-foreach="o.invoice_line_ids" t-as="p">
                                            <t t-set="total_sale_order" t-value="total_sale_order + p.price_subtotal" /> 
                                            <tr class='detail'>
                                            <td colspan="3" class="invoice_line"><t t-esc="p.name" /></td>
                                            <td colspan="1" class="invoice_line text-right"><t t-esc="p.quantity" /></td>
                                            <td colspan="2" class="invoice_line text-right"><t t-esc="'${:,.2f}'.format(p.price_unit)" /></td>
                                            <td colspan="3" class="invoice_line text-right"><t t-esc="'${:,.2f}'.format(p.price_subtotal)" /></td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td colspan="9">

                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="4">

                                            </td>
                                            <td class="text-right">
                                                Subtotal
                                            </td>
                                            <td colspan="3"  class="text-right">
                                                <t t-esc="'${:,.2f}'.format(total_sale_order)" />
                                            </td>
                                        </tr>
                                        <tr t-if="not is_html_empty(o.narration)"  >
                                            <td colspan="9" class='tdnarration'>
                                                <span t-field="o.narration"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-12  pl-4">
                                With kind regards,
                            </div>
                           
                        </div>
                        <div class="row mt-5">
                            <div class="col-12 pl-4">
                                <span>Christiaan Romme</span><br/>
                                <span>General Director</span>
                            </div>
                            
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>