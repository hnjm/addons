<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <data>
    
        <record id="action_report_profoma_invoice_template" model="ir.actions.report">
            <field name="name">Proforma Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">report_invoice_template.report_profoma_invoice_new</field>
            <field name="report_file">report_invoice_template.report_profoma_invoice_new</field>
            <field name="print_report_name">'Proforma Invoice'</field>
             <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>
    </data>

    <template id="report_profoma_invoice_new">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report_template_custom.custom_layout">
                    <div class="page page_custom">
                        <link rel='stylesheet' href='/report_template_custom/static/src/css/style.css'/>
                        
                        <div class="row">
                            <div class="col-6">
                                <strong class='text-capitalize' >Shipper:</strong><br/>
                                <div class="address">
                                    ABC VIETNAM MANUFACTURING &amp; SOURCING COMPANY LIMITED <br/>
                                    FLOOR 19, OFFICE BLOCK, INDOCHINA PARK TOWER,<br/>
                                    NO 4 NGUYEN DINH CHIEU STREET, DAKAO WARD,<br/>
                                    DISTRICT1, HOCHIMINH CITY, VIETNAM<br/>
                                </div>
                            </div>
                            <div class="col-3">
                                <strong class='text-capitalize' >Consignee:</strong><br/>
                            </div>
                            <div class="col-3" >
                                <strong class='text-capitalize' >Bill to:</strong><br/>
                                <div class='address'>
                                    <t t-if="o.partner_id.parent_id.name" t-esc="o.partner_id.parent_id.name" /><br t-if="o.partner_id.parent_id.name"/>
                                    <t t-if="o.partner_id.name" t-esc="o.partner_id.name" /><br t-if="o.partner_id.name"/>
                                    <t t-if="o.partner_id.street" t-esc="o.partner_id.street" /><br t-if="o.partner_id.street"/>
                                    <t t-esc="o.partner_id.street2" /><span  t-if="o.partner_id.street2">,</span> <t t-esc="o.partner_id.city" /><span  t-if="o.partner_id.city">,</span> <t t-esc="o.partner_id.state_id.name" /><span  t-if="o.partner_id.state_id.name">,</span> <t t-esc="o.partner_id.zip" />
                                    <br t-if="o.partner_id.street2 or o.partner_id.city or o.partner_id.state_id.name or o.partner_id.zip"/>
                                    <t t-if="o.partner_id.country_id.name" t-esc="o.partner_id.country_id.name" />
                                </div>
                                
                            </div>
                        </div>
                        <div class="row line_orange">
                            <div class="col-6 card_name_report" >
                                <t style="name_report">Invoice</t>
                            </div>
                            <div class="col-6">
                                <div class='row'>
                                    <div class='col-4'>
                                        <span class='title_info'>Invoice number</span>
                                    </div>
                                    <div  class='point text-right'>:</div>
                                    <div class='col-8'>
                                        <span class="value_info"><t t-esc="o.name" /></span>
                                    </div>
                                </div>
                                <div class='row'>
                                    <div class='col-4'>
                                        <span class='title_info'>Sale Order number</span>
                                    </div>
                                    <div  class='point text-right'>:</div>
                                    <div class='col-8'>
                                        <span class="value_info"><t t-esc="o.invoice_origin"/></span>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="row line_orange">
                            <div class='col-6'>
                                <div class='row'>
                                    <div class='col-4'>
                                        <span class='title_info'>Your Order nr.</span>
                                        
                                    </div>
                                    <div  class='point text-right'>:</div>
                                    <div class='col-8'>
                                        <span class="value_info"><t t-esc="o.ref" /></span>
                                    </div>
                                </div>
                                <div class='row'>
                                    <div class='col-4'>
                                        <span class='title_info'>Your phone nr.</span>
                                        
                                    </div>
                                    <div  class='point text-right'>:</div>
                                    <div class='col-8'>
                                        <span class="value_info"><t t-esc="o.partner_id.phone" /></span>
                                    </div>
                                </div>
                                <div class='row'>
                                    <div class='col-4'>
                                        <span class='title_info'>Your e-mail.</span>
                                    </div>
                                    <div  class='point text-right'>:</div>
                                    <div class='col-8'>
                                        <span class="value_info"><t t-esc="o.partner_id.email" /></span>
                                    </div>
                                </div>
                            </div>
                            <div class='col-6'>
                                <div class='row'>
                                    <div class='col-4'>
                                        <span class='title_info'>Invoice date</span>
                                        
                                    </div>
                                    <div  class='point text-right'>:</div>
                                    <div class='col-8'>
                                        <span class="value_info"> 
                                            <t  t-if="o.invoice_date" t-esc="o.invoice_date" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/>
                                            <t t-if="not o.invoice_date" t-esc="datetime.date.today()" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/>
                                        </span>
                                    </div>
                                </div>
                                <div class='row'>
                                    <div class='col-4'>
                                        <span class='title_info'>Incoterms</span>
                                    </div>
                                    <div  class='point text-right'>:</div>
                                    <div class='col-8'>
                                        <span class="value_info"><t t-esc="o.invoice_incoterm_id.name" /></span>
                                    </div>
                                </div>
                                <div class='row'>
                                    <div class='col-4'>
                                        <span class='title_info'>Terms of payment.</span>
                                        
                                    </div>
                                    <div  class='point text-right'>:</div>
                                    <div class='col-8'>
                                        <span class="value_info"><t t-esc="o.invoice_payment_term_id.name" /></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row info_product">
                            <div style='width:5%'>
                                <span>Line</span>
                            </div>
                            <div style='width:10%'>
                                <span>Item nr.</span>
                            </div>
                             <div style='width:10%'>
                                <span>Rev</span>
                            </div>
                            <div  style='width:30%'>
                                <span>Description</span>
                            </div>
                            <div  class='text-right' style='width:10%'>
                                <span>Quantity</span>
                            </div>
                            <div class='text-center' style='width:10%'>
                                <span>Unit</span>
                            </div>
                            <div  class='text-right' style='width:10%'>
                                <span>Unit Price</span>
                            </div>
                            <!-- <div  style='width:15%'>
                                <span>Taxes</span>
                            </div> -->
                            <div class='text-right' style='width:15%'>
                                <span>Amount</span>
                            </div>
                        </div>
                        <t t-set="total_invoice" t-value="0"/>
                        <t t-set="total_down_payment" t-value="0"/>
                        <t t-set="i" t-value="0" />
                        <t t-foreach="o.invoice_line_ids" t-as="p">
                            <t t-if="p.product_id">
                                <t t-if="p.sale_line_ids.is_downpayment">
                                    <t t-set="total_down_payment" t-if="p.price_subtotal&lt;0" t-value="total_down_payment + p.price_subtotal * (-1)" />
                                    <t t-set="total_down_payment" t-if="p.price_subtotal&gt;=0" t-value="total_down_payment + p.price_subtotal" />  
                                </t>
                                <t t-set="i" t-value="i+10"/>
                                
                                <div class="row detail_product" t-if="not p.sale_line_ids.is_downpayment and p.display_type!='line_section'">
                                    <t t-set="total_invoice" t-value="total_invoice + p.price_subtotal" /> 
                                    <div style='width:5%'>
                                        <span><t t-esc="i" /></span>
                                    </div>
                                    <div style='width:10%'>
                                        <span><t t-esc="p.product_id.product_tmpl_id.customer_reference" /></span>
                                    </div>
                                    <div style='width:10%'>
                                        <span><t t-esc="p.product_id.product_tmpl_id.revision"/></span>
                                    </div>
                                    <div style='width:30%'>
                                        <span><t t-esc="p.product_id.name" /></span>
                                    </div>
                                    <div class='text-right' style='width:10%'>
                                        <span><t t-esc="p.quantity" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></span>
                                    </div>
                                    <div class='text-center' style='width:10%'>
                                        <span><t t-esc="p.product_uom_id.name" /></span>
                                    </div>
                                    <div class='text-right' style='width:10%'> 
                                        <span><t t-esc="p.price_unit" t-options='{"widget": "float", "decimal_precision": "Product Price"}'/></span>
                                    </div>
                                    <!-- <div style='width:15%'>
                                        <span><t t-esc="', '.join(map(lambda x: (x.description or x.name), p.tax_id))"/></span>
                                    </div> -->
                                    <div class='text-right' style='width:15%'>
                                        <span><t t-esc="p.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></span>
                                    </div>
                                </div>
                            </t>
                        </t>
                        <div class='row line_orange' t-if="total_invoice &gt;0"/>
                        
                        <div class="row ">
                            <div style='width:70%' >
                           
                            </div>
                            <div class='text-right' style='width:30%'>
                                <table class="table table-borderless m-0 info_total">
                                    <tr>
                                        <td>
                                            <span>Uaxed Amount </span>
                                        </td>
                                        <td>
                                            <span><t t-esc="total_invoice" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></span>

                                        </td>
                                    </tr>
                                    <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                    <t t-call="report_invoice_template.document_tax_totals_new"/>
                                    <tr>
                                        <td>
                                            <span>Total</span>
                                        </td>
                                        <td>
                                             <t t-set="total_invoice_tax" t-value="total_invoice + o.amount_tax" />
                                            <span><t t-esc="total_invoice_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}' /></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>Down Payment</span>
                                        </td>
                                        <td>
                                            <t t-esc="total_down_payment" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="row line_note">
                            <div class="col-12 pl-4">
                                <span t-field="o.narration"/>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12  pl-4">
                                With kind regards,
                            </div>
                           
                        </div>
                        <div class="row mt-5">
                            <div class="col-12 pl-4">
                                <span>Christiaan Romme</span><br/>
                                <span>General Director</span>
                            </div>
                            
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="document_tax_totals_new">
        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
            <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
            <t t-call="account.tax_groups_totals"/>
        </t>
    </template>
</odoo>