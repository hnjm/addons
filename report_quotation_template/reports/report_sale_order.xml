<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
         <record id="action_report_sale_order_template" model="ir.actions.report">
            <field name="name">Sale Order Template</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">report_quotation_template.report_sale_order_template</field>
            <field name="report_file">report_quotation_template.report_sale_order_template</field>
            <field name="print_report_name">'Sale order'</field>
            <field name="binding_model_id" ref="model_sale_order"/>
            <field name="binding_type">report</field>
        </record>
    </data>

    <template id="report_sale_order_template">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report_template_custom.custom_layout">
                    <div class="page">
                        <style>
                             td {
                                border-left: 1px solid white !important;
                                border-right: 1px solid white !important;
                                border-top: 1px solid #FF9900 !important;
                                border-bottom: 1px solid #FF9900 !important;
                            }
                            .sale_order_line{
                                border-top: 1px solid white !important;
                                border-bottom: 1px solid white !important;
                            }
                            .sale_order_line_1{
                                border-bottom: 1px solid #FF9900 !important;
                            }
                            .title-address{
                                font-size: 18px;
                                font-weight: bolder;
                            }
                            .tdnarration td{
                                border: none !important
                            }
                        </style>
                        <div class="row">
                            <div class="col-7">
                            </div>
                            <div class="col-5">
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.parent_id.name" /></span>
                                </div>
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.name" /></span>
                                </div>
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.street" /></span>
                                </div>
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.street2" />, <t t-esc="o.partner_id.city" />, <t t-esc="o.partner_id.state_id.name" />, <t t-esc="o.partner_id.zip" /></span>
                                </div>
                                <div>
                                    <span class="title-address"><t t-esc="o.partner_id.country_id.name" /></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class='col-12'>
                                <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                    <td colspan="9">
                                        <div class="row">
                                            <div class="col-6 text-center">
                                                <span style="font-size: 22px; font-weight: bolder">QUOTATION</span>
                                            </div>
                                            <div class="col-6">
                                                <div class="text-left">
                                                    <span>
                                                        <span style="margin-right: 10px;">Quotation number</span>
                                                        <span style="margin-left: 2px;">:</span>
                                                        <span class="span-header-three-1"><t t-esc="o.name" /></span>
                                                    </span>
                                                    <span style="margin-left: 40px;">Rev : 00</span>
                                                </div>
                                                <div class="text-left">
                                                    <span>
                                                        <span style="margin-right: 10px;">Quotation date</span>
                                                        <span style="margin-left: 24px;">:</span>
                                                        <span class="span-header-three"><t t-esc="o.date_order" t-options='{"widget": "date"}'/></span>
                                                    </span>
                                                    <span style="margin-left: 40px;">Week: <t t-esc="o.date_order.strftime('%V')"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    </tr>
                                    <tr>
                                    <td colspan="9">
                                        <div class="row">
                                            <div class="col-6">
                                                <div >
                                                    <span>Your Reference</span>
                                                    <span style="margin-left: 10px">:</span>
                                                    <span style="margin-left: 10px"><t t-esc="o.client_order_ref" /></span>
                                                </div>
                                                <div>
                                                    <span>Your phone nr.</span>
                                                    <span style="margin-left: 13px">:</span>
                                                    <span style="margin-left: 10px"> <t t-esc="o.partner_id.phone" /></span>
                                                </div>
                                                <div>
                                                    <span>Your e-mail</span>
                                                    <span style="margin-left: 35px">:</span>
                                                    <span style="margin-left: 10px"><t t-esc="o.partner_id.email" /></span>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="text-left">
                                                    <span>
                                                        <span>Validity Quotation</span>
                                                        <span style="margin-left:10px">:</span>
                                                        <span class="span-header-three-1"><t t-esc="o.format_date(o.validity_date)" /> </span>
                                                    </span>
                                                </div>
                                                <div class="text-left">
                                                    <span>
                                                        <span>Incoterms</span>
                                                        <span style="margin-left: 70px">:</span>
                                                        <span class="span-header-three"><t t-esc="o.incoterm.name" /></span>
                                                    </span>
                                                </div>
                                                <div class="text-left">
                                                    <span>
                                                        <span>Terms of payment</span>
                                                        <span style="margin-left: 15px">:</span>
                                                        <span class="span-header-three"><t t-esc="o.payment_term_id.name" /></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    </tr>
                                    <tr>
                                        <td>Line</td>
                                        <td>Item nr.</td>
                                        <td>Rev</td>
                                        <td colspan="2">Description</td>
                                        <td class="text-right">Quantity</td>
                                        <td class="text-center">Unit Price</td>
                                        <td colspan="2" class="text-right">Total</td>
                                    </tr>
                                    <t t-set="i" t-value="0" />
                                    <t t-foreach="o.order_line" t-as="p">
                                        <t t-set="i" t-value="i+10"/>
                                        <tr>
                                        <td class="sale_order_line"><t t-esc="i" /></td>
                                        <td class="sale_order_line"><t t-esc="p.product_id.product_tmpl_id.customer_reference" /></td>
                                        <td class="sale_order_line"><t t-esc="p.product_id.product_tmpl_id.revision"/></td>
                                        <td colspan="2" class="sale_order_line"><t t-esc="p.product_id.name" /></td>
                                        <td class="sale_order_line text-right"><t t-esc="p.product_uom_qty" /></td>
                                        <td class="sale_order_line text-right"><t t-esc="p.format_currency(p.price_unit)" /></td>
                                        <td colspan="2" class="sale_order_line text-right"><t t-esc="p.format_currency(p.price_subtotal)" /></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="9">

                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="6">

                                        </td>
                                        <td class="text-center">
                                            Subtotal
                                        </td>
                                        <td colspan="2" class="text-right">
                                            <t t-esc="o.format_currency(float(o.total_sale_order()))" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="9" class='tdnarration'>
                                            <t t-raw="o.note" />
                                        </td>
                                    </tr>
                                </tbody>
                                </table>
                            </div>
                        </div>
                         <div class="row mt-3">
                            <div class="col-12 pl-4">
                                We thank you for your interest and are looking forward to receive this order.
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12 pl-4">
                                With kind regards,
                            </div>
                            
                        </div>
                        <div class="row mt-5">
                            <div class="col-12 pl-4">
                                <t t-esc="o.user_id.name" />
                            </div>
                             
                        </div>
                        <div class="row mt-1">
                            <div class="col-12 pl-4">
                                <t t-esc="o.user_id.partner_id.function" />
                            </div>
                           
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
